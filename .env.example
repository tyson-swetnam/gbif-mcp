# GBIF MCP Server Configuration

# GBIF API Configuration
GBIF_BASE_URL=https://api.gbif.org/v1
# GBIF_USERNAME=your_username_here
# GBIF_PASSWORD=your_password_here
GBIF_USER_AGENT=GBIF-MCP-Server/1.0.0
GBIF_TIMEOUT=30000
GBIF_RETRY_ATTEMPTS=3
GBIF_RETRY_DELAY=1000

# Rate Limiting Configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_CONCURRENT=10
RATE_LIMIT_BACKOFF_MULTIPLIER=2
RATE_LIMIT_MAX_BACKOFF=60000

# Cache Configuration
CACHE_ENABLED=true
CACHE_MAX_SIZE=100
CACHE_TTL=3600000
CACHE_CHECK_PERIOD=600000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MASK_SENSITIVE=true

# Server Configuration
SERVER_NAME=gbif-mcp-server
SERVER_VERSION=1.0.0
SERVER_DESCRIPTION=MCP server for GBIF biodiversity data

# Feature Flags
ENABLE_AUTH=false
ENABLE_CACHE=true
ENABLE_METRICS=true
ENABLE_VALIDATION=true
